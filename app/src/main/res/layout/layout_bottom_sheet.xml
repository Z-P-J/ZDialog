<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet_dialog"
    >

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >



            <TextView
                android:textColor="#333333"
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:text="文件名"
                android:maxLines="2"
                android:textStyle="bold"
                />



            <TextView
                android:textColor="#cccccc"
                android:id="@+id/item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="128MB"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_create_black_24dp"
        android:padding="15dp"
        android:text="重命名"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/text_black"
        />

    <TextView
        android:id="@+id/item_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_content_copy_black_24dp"
        android:padding="15dp"
        android:text="复制"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/text_black"
        />

    <TextView
        android:id="@+id/item_cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_content_cut_black_24dp"
        android:padding="15dp"
        android:text="移动"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/text_black"
        />

    <TextView
        android:id="@+id/item_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        android:padding="15dp"
        android:text="删除"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/text_black"
        />

</LinearLayout>